
@{
    ViewBag.Title = "Employee List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/nmp/bootstrap@5.3.0/dist/css/bootstrap.min.css" />


<div class="container mt-4">
    <h2 class="mb-2">Employees</h2>

    <button class="btn btn-primary mb-3" onclick="openCreateModal()">+ Add Employee</button>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Place Of Birth</th>
                <th>Date Of Birth</th>
                <th>Basic Salary</th>
                <th>Gender</th>
                <th>Marital Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="employeeTableBody">
            <!--data via ajax-->
        </tbody>
    </table>
</div>

<!-- Modal Create and Update -->

<div class="modal fade" id="employeeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Header modal star -->
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <!-- Header modal end -->
            <!-- Body modal star -->
            <div class="modal-body">
                <input type="hidden" id="EmployeeID" />

                <div class="mb-3">
                    <label>Name</label>
                    <input type="text" id="Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Place Of Birth</label>
                    <input type="text" id="PlaceOfBirth" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Date Of Birth</label>
                    <input type="date" id="DateOfBirth" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Basic Salary</label>
                    <input type="number" id="BasicSalary" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Gender</label>
                    <select id="Gender" class="form-control">
                        <option>Male</option>
                        <option>Famale</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label>Marital Status</label>
                    <select id="MaritalStatus" class="form-control">
                        <option>Single</option>
                        <option>Married</option>
                        <option>Divorced</option>
                    </select>
                </div>
            </div>
            <!-- Body modal end -->
            <!-- Footer modal -->
            <div class="modal-footer">
                <button class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-success" onclick="saveEmployee()">Save</button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Load data saat halaman dibuka
    $(document).ready(function () {
        loadEmployees();
    });

    function loadEmployees() {
        $.ajax({
            url: '/Employee/GetAll',
            typeof: 'GET',
            success: function (data) {
                let rows = "";
                $.each(data, function (i, emp) {
                    rows += `
                     <tr>
                        <td>${emp.Name}</td>
                        <td>${emp.PlaceOfBirth}</td>
                        <td>${emp.DateOfBirth.substring(0, 10)}</td>
                        <td>${emp.BasicSalary}</td>
                        <td>${emp.Gender}</td>
                        <td>${emp.MaritalStatus}</td>

                        <td>
                             <button class="btn btn-warning btn-sm" onclik="editEmployee(${emp.EmployeeID})">Edit</button>
                             <button class="btn btn-danger btn-sm" onclik="deleteEmployee(${emp.EmployeeID})">Delete</button>
                        </td>
                    </tr>
                    `;
                });
                $("#employeeTableBody").html(rows);
            }
        });
    }

    // create modal
    function openCreateModal() {
        $("#modalTitle").text("Add Employee");
        $("#Name").val("");
        $("#PlaceOfBirth").val("");
        $("#DateOfBirth").val("");
        $("#BasicSalary").val("");
        $("#Gender").val("");
        $("#MaritalStatus").val("");

        new bootstrap.Modal(document.getElementById('employeeModal')).show();
    }

    // edit modal
    function editEmployee(id) {
        $.ajax({
            url: '/Employee/GetById',
            type: 'GET',
            data: { id: id },
            success: function (emp) {
                $("#modalTitle").text("Edit Employee");

                $("#EmployeeID").val(emp.EmployeeID);
                $("#Name").val(emp.Name);
                $("#PlaceOfBirth").val(emp.PlaceOfBirth);
                $("#DateOfBirth").val(emp.DateOfBirth.substring(0, 10));
                $("#BasicSalary").val(emp.BasicSalary);
                $("#Gender").val(emp.Gender);
                $("#MaritalStatus").val(emp.MaritalStatus);

                new bootstrap.Modal(document.getElementById('employeeModal')).show();

            }
        });
    }

    // save employee
    function saveEmployee() {
        let emp = {
            EmployeeID: $("#EmployeeID").val(),
            Name: $("#Name").val(),
            PlaceOfBirth: $("#PlaceOfBirth").val(),
            DateOfBirth: $("#DateOfBirth").val(),
            BasicSalary: $("#BasicSalary").val(),
            Gender: $("#Gender").val(),
            MaritalStatus: $("#MaritalStatus").val(),
        };

        // ============
        // VALIDASI INPUT (SweetAlert)
        // ============

        if (emp.Name === "") {
            Swal.fire("Error", "Name Wajib diisii!", "error");
            return;
        }
        if (emp.PlaceOfBirth === "") {
            Swal.fire("Error", "Tempat Lahir Wajib diisii!", "error");
            return;
        }
        if (emp.DateOfBirth === "") {
            Swal.fire("Error", "Tanggal lahir Wajib diisii!", "error");
            return;
        }
        if (emp.Gender === "") {
            Swal.fire("Error", "Gender Wajib diisii!", "error");
            return;
        }
        if (emp.MaritalStatus === "") {
            Swal.fire("Error", "Marital Status Wajib diisii!", "error");
            return;
        }

        // Tentukan Add atau Update
        let url = emp.EmployeeID === "" ? '/Employee/Add' : 'Employee/Update';

        $.ajax({
            url: url,
            type: 'POST',
            data: emp,
            success: function () {
                Swal.fire({
                    icon: 'success',
                    ttile: 'Success',
                    text: emp.EmployeeID == "" ? "Employee added" : "Employee updated"
                });
                loadEmployees();
                bootstrap.Modal.getInstance(document.getElementById('employeeModal')).hide();
            }
        });
    }

    // delete
    function deleteEmployee(id) {
        Swal.fire({
            icon: 'warning',
            title: 'Delete Employee?',
            text: "Yakin Ingin Menghapus?",
            showCencelButton: true,
            confirmButtonText: 'Yes, Delete'
        }).then((res) => {
            if (res.isConfirmed) {
                $.ajax({
                    url: '/Employee/Delete',
                    type: 'POST',
                    data: { id: id },
                    success: function () {
                        Swal.fire({
                            icon: 'success',
                            title: 'Delete',
                            text: "Data Berhasil Dihapus!!"
                        });

                        loadEmployees();
                    }
                });
            }
        });
    }
</script>

